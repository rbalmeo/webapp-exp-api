	<munit:config name="get-user-byusername-test-suite.xml" />
	<import doc:name="Import" doc:id="c497b904-eecd-4258-bd10-3f6dd85e8540" file="test-global-config.xml"/>
	<munit:test name="get-user-byusername-success-test" doc:id="c7506417-0e21-4f98-9d94-247f84b2c44d" description="Test">
		<munit:enable-flow-sources >
			<munit:enable-flow-source value="webapp-exp-api-main" />
			<munit:enable-flow-source value="get:\users\(username):webapp-exp-api-config" />
		</munit:enable-flow-sources>
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock when Get User by Username API" doc:id="fd5d2d84-f984-488e-a43f-a53ac657170b" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User by Username API" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[MunitTools::getResourceAsString('testdata/get-user/byusername/get-user-response.json')]" mediaType="application/json" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<http:request method="GET" doc:name="Request" doc:id="277257bd-464a-430e-89db-9c534929f7db" config-ref="HTTPS_Test_Request_configuration" path="/users/john123">
				<http:headers ><![CDATA[#[output application/java
---
{
	"x-code" : "1234567890abcdef",
	"x-correlationid" : "test"
}]]]></http:headers>
			</http:request>
		</munit:execution>
		<munit:validation>
			<munit-tools:verify-call doc:name="Verify call Get User by Username API" doc:id="d391a4c8-41be-4b61-89a9-af6087c7ee2d" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User by Username API" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
			<munit-tools:assert-that doc:name="Assert Response Payload" doc:id="2fc3984e-6561-4f65-bbcf-b45783a24fe2" expression="#[output application/java --- (write(payload, 'application/json') as String) replace /(\s+)/  with '']" is="#[MunitTools::equalTo(MunitTools::getResourceAsString('testdata/get-user/byusername/get-user-response.json') replace /(\s+)/  with '')]" />
		</munit:validation>
	</munit:test>

