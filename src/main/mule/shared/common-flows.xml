		<http:request method="GET" doc:name="Get User API" doc:id="12146526-6b29-4cd1-937a-06ab0100f30d" config-ref="UserProfileProcAPI_HTTP_Request_configuration" path="${secure::userprofileprocapi.http.path.users}">
			<http:headers ><![CDATA[#[output application/java
---
{
	"x-code" : vars.commonHeaders.code,
	"x-correlationid" : vars.commonHeaders.correlationId
}]]]></http:headers>
		</http:request>
		<logger level="INFO" doc:name="Log Response" doc:id="ec3c2d16-9528-409e-8458-62e2bad2281b" message='#["Get User Response: " ++ write(payload,"application/json")]'/>
	</sub-flow>
	<sub-flow name="userprofileprocapi-get-user-byusername-subflow" doc:id="24fb2ce9-37b0-452b-aea0-5a67e5a11df0" >
		<logger level="TRACE" doc:name="Log Request" doc:id="8a7aa72a-5ac3-42b6-b818-2faa41181408" message='#["Get User by Username Request: " ++ write("username":vars.username, "application/json")]' />
		<http:request method="GET" doc:name="Get User by Username API" doc:id="11fb0a97-5af4-4772-ac1b-520ccb7b454b" config-ref="UserProfileProcAPI_HTTP_Request_configuration" path="${secure::userprofileprocapi.http.path.users}/{username}">
			<http:headers><![CDATA[#[output application/java
---
{
	"x-code" : vars.commonHeaders.code,
	"x-correlationid" : vars.commonHeaders.correlationId
}]]]></http:headers>
			<http:uri-params><![CDATA[#[output application/java
---
{
	username : vars.username
}]]]></http:uri-params>
		</http:request>
		<logger level="INFO" doc:name="Log Response" doc:id="c068bc65-d06f-4074-a6b3-16983b37873b" message='#["Get User by Username Response: " ++ write(payload, "application/json")]' />
	</sub-flow>
