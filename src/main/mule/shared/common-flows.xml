			<http:headers ><![CDATA[#[output application/java
---
{
	"x-code" : vars.commonHeaders.code,
	"x-correlationid" : vars.commonHeaders.correlationId
}]]]></http:headers>
		</http:request>
		<logger level="INFO" doc:name="Log Response" doc:id="322bb0e3-232c-4300-bd11-6206ee3d08cb" message='#["Post User Response: " ++ write(payload, "application/json")]' />
	</sub-flow>
</mule>
